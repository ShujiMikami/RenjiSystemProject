    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Microcontroller",
            "cwd": "${workspaceRoot}",
            "executable": "./BUILD/GPIO_Expander.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "LPC1114",
            "runToMain": true,
            "configFiles": [
                "${env:OPENOCD_SCRIPT_DIR}/interface/stlink-v2.cfg",
                "${env:OPENOCD_SCRIPT_DIR}/target/lpc11xxx_swd_flash.cfg"
            ],
            "preLaunchCommands": [
                "break main",
                "monitor reset halt",
                "interrupt"
            ],
            "postLaunchCommands": [
                //"break main",
                "continue",
            ],

        }
    ]
}